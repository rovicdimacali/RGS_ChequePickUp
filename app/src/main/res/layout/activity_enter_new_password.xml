<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnterNewPassword"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/back_button"/>

    <TextView
        android:id="@+id/newpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="70dp"
        android:text="Enter New Password"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold" />



    <TextView
        android:id="@+id/oldpasswordtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/newpassword"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:text="Old Password"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/inputoldpass"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/oldpasswordtitle"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="6dp"
        android:background="#F2F2F2"
        android:hint="Enter Old Password"
        android:padding="20dp"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/newpasswordtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/inputoldpass"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:text="New Password"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/inputnewpassword"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_below="@+id/newpasswordtitle"
        android:layout_marginTop="5dp"
        android:hint="Enter New Password"
        android:padding="20dp"
        android:background="#F2F2F2"
        android:textSize="15dp"
        android:inputType="textPassword"/>

    <TextView
        android:id="@+id/confirmpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/inputnewpassword"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:text="Confirm Password"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/inputconfirmpass"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_below="@+id/confirmpass"
        android:layout_marginTop="5dp"
        android:hint="Confirm Password"
        android:padding="20dp"
        android:background="#F2F2F2"
        android:textSize="15dp"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/submit_button"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="28dp"
        android:layout_below="@id/inputconfirmpass"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/rounded_button"
        android:text="Submit"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white" />

</RelativeLayout>