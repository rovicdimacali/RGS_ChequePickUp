<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OfficialReceipt">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello"
        android:textSize="20dp"
        android:paddingLeft="10dp"
        android:paddingVertical="15dp"
        android:background="@color/rgs_bg"
        android:id="@+id/back_button"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/Llayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/companytitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="Company Name"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/inputcompany"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="5dp"
                android:hint="Company Name"
                android:padding="20dp"
                android:background="#F2F2F2"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/businessaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:textStyle="bold"
                android:text="Business Address"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/inputaddress"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="5dp"
                android:hint="Business Address"
                android:padding="20dp"
                android:background="#F2F2F2"
                android:textSize="15dp"
                android:inputType="text"/>

            <TextView
                android:id="@+id/payeetitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:text="Payee"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/inputpayee"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="5dp"
                android:hint="Payee"
                android:padding="20dp"
                android:background="#F2F2F2"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/bankCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:textStyle="bold"
                android:text="Bank Code"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/inputBC"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="5dp"
                android:hint="Bank Code"
                android:padding="20dp"
                android:background="#F2F2F2"
                android:textSize="15dp"
                android:inputType="text"/>

            <TextView
                android:id="@+id/tinNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:textStyle="bold"
                android:text="TIN Number"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/inputtin"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="5dp"
                android:hint="TIN Number"
                android:padding="20dp"
                android:background="#F2F2F2"
                android:textSize="15dp"
                android:inputType="text"/>

            <TextView
                android:id="@+id/orNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:textStyle="bold"
                android:text="OR Number"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/inputOR"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="5dp"
                android:hint="OR Number"
                android:padding="20dp"
                android:background="#F2F2F2"
                android:textSize="15dp"
                android:inputType="text"/>

            <LinearLayout
                android:id="@+id/date_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/chequeDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="25dp"
                    android:text="Cheque Date"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/datePickerButton"
                    style="?android:dropDownSpinnerStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="90"
                    android:text="JAN 01 2023"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/chequenumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:textStyle="bold"
                android:text="Cheque Number"
                android:textColor="@color/black" />


            <LinearLayout
                android:id="@+id/chknumText"
                android:layout_width="381dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/inputchequenumber"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:layout_marginTop="5dp"
                    android:background="#F2F2F2"
                    android:hint="Cheque Number"
                    android:inputType="number"
                    android:padding="20dp"
                    android:textSize="15dp" />

                <LinearLayout
                    android:id="@+id/layout_number1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/inputchequenumber1"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="28dp"
                        android:layout_marginTop="5dp"
                        android:hint="Cheque Number"
                        android:padding="20dp"
                        android:background="#F2F2F2"
                        android:layout_weight="80"
                        android:textSize="15dp"
                        android:inputType="number"
                        />

                    <ImageView
                        android:id="@+id/delete_number1"
                        android:layout_width="20dp"
                        android:layout_margin="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/delete"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_number2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/inputchequenumber2"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="28dp"
                        android:layout_marginTop="5dp"
                        android:hint="Cheque Number"
                        android:padding="20dp"
                        android:background="#F2F2F2"
                        android:layout_weight="80"
                        android:textSize="15dp"
                        android:inputType="number"
                        />

                    <ImageView
                        android:id="@+id/delete_number2"
                        android:layout_width="20dp"
                        android:layout_margin="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/delete"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_number3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/inputchequenumber3"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="28dp"
                        android:layout_marginTop="5dp"
                        android:hint="Cheque Number"
                        android:padding="20dp"
                        android:background="#F2F2F2"
                        android:layout_weight="80"
                        android:textSize="15dp"
                        android:inputType="number"
                        />

                    <ImageView
                        android:id="@+id/delete_number3"
                        android:layout_width="20dp"
                        android:layout_margin="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/delete"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_number4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/inputchequenumber4"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="28dp"
                        android:layout_marginTop="5dp"
                        android:hint="Cheque Number"
                        android:padding="20dp"
                        android:background="#F2F2F2"
                        android:layout_weight="80"
                        android:textSize="15dp"
                        android:inputType="number"
                        />

                    <ImageView
                        android:id="@+id/delete_number4"
                        android:layout_width="20dp"
                        android:layout_margin="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/delete"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/chequeamount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:textStyle="bold"
                android:text="Cheque Amount"
                android:textColor="@color/black" />

        <LinearLayout
            android:id="@+id/chkamountText"
            android:layout_width="381dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/inputchequeamount"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="5dp"
                android:hint="Cheque Amount"
                android:padding="20dp"
                android:background="#F2F2F2"
                android:textSize="15dp"
                android:inputType="number"/>

            <LinearLayout
                android:id="@+id/layout_amount1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/inputchequeamount1"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:layout_marginTop="5dp"
                    android:hint="Cheque Amount"
                    android:padding="20dp"
                    android:background="#F2F2F2"
                    android:layout_weight="80"
                    android:textSize="15dp"
                    android:inputType="number"
                    />

                <ImageView
                    android:id="@+id/delete_amount1"
                    android:layout_width="20dp"
                    android:layout_margin="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/delete"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_amount2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/inputchequeamount2"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:layout_marginTop="5dp"
                    android:hint="Cheque Amount"
                    android:padding="20dp"
                    android:background="#F2F2F2"
                    android:layout_weight="80"
                    android:textSize="15dp"
                    android:inputType="number"
                    />

                <ImageView
                    android:id="@+id/delete_amount2"
                    android:layout_width="20dp"
                    android:layout_margin="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/delete"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_amount3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/inputchequeamount3"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:layout_marginTop="5dp"
                    android:hint="Cheque Amount"
                    android:padding="20dp"
                    android:background="#F2F2F2"
                    android:layout_weight="80"
                    android:textSize="15dp"
                    android:inputType="number"
                    />

                <ImageView
                    android:id="@+id/delete_amount3"
                    android:layout_width="20dp"
                    android:layout_margin="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/delete"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_amount4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/inputchequeamount4"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:layout_marginTop="5dp"
                    android:hint="Cheque Amount"
                    android:padding="20dp"
                    android:background="#F2F2F2"
                    android:layout_weight="80"
                    android:textSize="15dp"
                    android:inputType="number"
                    />

                <ImageView
                    android:id="@+id/delete_amount4"
                    android:layout_width="20dp"
                    android:layout_margin="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/delete"/>

            </LinearLayout>


        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <Button
                    android:id="@+id/addCheque_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/btn_secondary"
                    android:layout_weight=".5"
                    android:text="Add Cheque"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/submit_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="30dp"
                    android:layout_weight=".5"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/rounded_button"
                    android:text="Submit"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>